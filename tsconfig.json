{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "types": [
      "vite/client",
      "grecaptcha"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "types": ["./types"],
      "database": ["./database"],
      "shared": ["./shared"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
